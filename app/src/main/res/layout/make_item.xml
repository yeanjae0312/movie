<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/custom_item_img"
        android:src="@drawable/noprofileimage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="100dp"
        android:text="title"
        android:id="@+id/custom_item_title"/>

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="200dp"
        android:layout_toRightOf="@+id/custom_item_title"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/custom_item_check"
        android:src="@drawable/whitecheckicon"/>

</RelativeLayout>