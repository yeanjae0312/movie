<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/noprofileimage"
            android:id="@+id/custom_item_img"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="졸작 아자아자"
            android:layout_gravity="center_vertical"
            android:id="@+id/custom_item_title"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/balloono">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="화이팅 할 수 있다."
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:id="@+id/custom_item_content"/>

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>